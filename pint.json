{
    "preset": "per",
    "notPath": [
        "tests/fixtures/valid.php",
        "tests/ParserTest.php"
    ],
    "exclude": [
        "tests/.pest"
    ],
    "rules": {
        "@PSR12": true,
        "@PER-CS2.0": true,
        "binary_operator_spaces": {
            "operators": {
                "=>": "align_single_space_minimal_by_scope"
            }
        },
        "no_superfluous_phpdoc_tags": false,
        "not_operator_with_successor_space": false,
        "single_line_empty_body": true,
        "concat_space": {
            "spacing": "one"
        },
        "phpdoc_align": {
            "align": "vertical",
            "spacing": {
                "param": 1
            }
        }
    }
}
